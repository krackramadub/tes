extends layout

block content
  div(class="container" style="margin-top:100px")
    div(class="container" style="width:34em; margin-top:100px;")
      div(class="col-sm-4 col-md-12")
        div(class="card post-create-form md-form" style="padding:15px;")
          div(class="container" style="width:24em;text-align:center;margin-bottom:30px;")
            h2 Регистрация
            small(style="color:#777") или же можете 
              a(href="/users/login") войти
            hr(class="half-rule")
            form(method="POST" action="/register")
                input(type="text" name="nickname" required id="inputPrefilledEx" class="form-control" placeholder="Имя и Фамилия")
                input(type="text" name="login" required class="form-control" placeholder="Логин")
                input(type="password" name="passwd" required class="form-control" placeholder="Введите пароль")
                input(type="text" name="phone" required class="form-control" placeholder="Номер телефона")
                input(type="email" name="email" required class="form-control" placeholder="Email")
                br
                button(class="btn btn-lg btn-primary btn-block" type="submit") Зарегестрироваться
            br
            span (C) 2018-2019
